<div id='edit-blog-form'>
  <form action='/blog/<%= @blog.id %>' method='POST'>
    <input type="hidden" name="_method" value="PUT">
    Title: <input type='text' name='blog[title]' value='<%= @blog.title %>' >
    Headline: <input type='text' name='blog[headline]' value='<%= @blog.headline %>'>
    Content: <textarea name='blog[content]'><%= @blog.content %> </textarea>
    Tags: <input type='text' name='tags' placeholder='Seperate tags with commas'>
    <input type='submit' value='Edit Blog'>
  </form>

  <form action="/blog/<%= @blog.id %>" method="POST" class="comment_delete">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete!">
  </form>
</div>

